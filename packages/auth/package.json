{
  "name": "@originals/auth",
  "version": "1.0.0",
  "description": "Turnkey-based authentication for the Originals Protocol",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "scripts": {
    "build": "bunx tsc && bunx tsc-alias",
    "test": "bun test tests/",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "originals",
    "auth",
    "turnkey",
    "did",
    "authentication"
  ],
  "author": "Aviary Tech",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/onionoriginals/sdk"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "@turnkey/sdk-server": "^5.0.0",
    "@turnkey/core": "^1.10.0",
    "@originals/sdk": "^1.4.4",
    "jsonwebtoken": "^9.0.2",
    "@noble/hashes": "^2.0.1",
    "@noble/ed25519": "^2.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "bun-types": "^1.3.1",
    "eslint": "^9.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "express": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

