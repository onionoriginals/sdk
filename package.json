{
  "name": "@originals/sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for the Originals Protocol - creating, discovering, and transferring digital assets with cryptographically verifiable provenance",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "node ./node_modules/jest/bin/jest.js",
    "test:coverage": "node ./node_modules/jest/bin/jest.js --coverage",
    "test:ci": "node ./node_modules/jest/bin/jest.js --ci --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "originals",
    "did",
    "verifiable-credentials",
    "bitcoin",
    "ordinals",
    "digital-assets",
    "provenance",
    "decentralized-identity"
  ],
  "author": "Aviary Tech",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aviarytech/originals-sdk"
  },
  "dependencies": {
    "@digitalbazaar/bbs-signatures": "^3.0.0",
    "@noble/curves": "^1.6.0",
    "@noble/ed25519": "^2.0.0",
    "@noble/hashes": "^2.0.1",
    "@noble/secp256k1": "^2.0.0",
    "@scure/bip32": "^2.0.0",
    "bitcoinjs-lib": "^6.1.0",
    "cbor-js": "^0.1.0",
    "didwebvh-ts": "^2.5.4",
    "jsonld": "^8.3.3",
    "multiformats": "^12.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.17",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-jest": "^30.1.2",
    "eslint": "^8.0.0",
    "jest": "^30.1.3",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.2.22"
}
