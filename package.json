{
  "name": "@originals/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for the Originals Protocol SDK and applications",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "bun run --filter @originals/sdk build",
    "test": "bun run --filter @originals/sdk test",
    "test:coverage": "bun run --filter @originals/sdk test:coverage",
    "test:ci": "bun run scripts/check-coverage.ts",
    "test:security": "bun run --filter @originals/sdk test:security",
    "test:stress": "bun run --filter @originals/sdk test:stress",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "lint": "bun run --filter @originals/sdk lint"
  },
  "author": "Aviary Tech",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aviarytech/originals-sdk"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "playwright": "^1.56.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.2.22"
}
