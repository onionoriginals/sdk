{
  "name": "@originals/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for the Originals Protocol SDK and applications",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:ci": "turbo run test:ci",
    "test:security": "turbo run test:security",
    "test:stress": "turbo run test:stress",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:ui": "turbo run test:e2e:ui",
    "test:e2e:headed": "turbo run test:e2e:headed",
    "test:e2e:debug": "turbo run test:e2e:debug",
    "test:e2e:report": "playwright show-report",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "dev": "turbo run dev",
    "check": "turbo run check"
  },
  "author": "Aviary Tech",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aviarytech/originals-sdk"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "playwright": "^1.56.1",
    "turbo": "^2.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.2.22"
}
