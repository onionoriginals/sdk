{
  "name": "ordinals-plus-indexer",
  "version": "1.0.0",
  "description": "Clean, focused indexer for Ordinals Plus resources (DIDs and VCs)",
  "main": "src/index.ts",
  "type": "module",
  "bin": {
    "ordinals-indexer": "src/cli.ts"
  },
  "scripts": {
    "build": "tsc",
    "start": "bun run src/index.ts",
    "cli": "bun run src/cli.ts",
    "dev": "bun run src/index.ts",
    "start:reverse": "REVERSE_REINDEX=true BLOCK_TAIL_MODE=false bun run src/index.ts",
    "start:forward": "REVERSE_REINDEX=false BLOCK_TAIL_MODE=false START_INSCRIPTION=0 bun run src/index.ts",
    "start:tail": "REVERSE_REINDEX=false BLOCK_TAIL_MODE=true bun run src/index.ts",
    "reset:index": "bun run src/reset-index.ts",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "ordinalsplus": "1.4.0",
    "redis": "^4.6.13"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ordinals",
    "bitcoin",
    "indexer",
    "did",
    "verifiable-credentials"
  ],
  "author": "Ordinals Plus Team",
  "license": "MIT"
}
